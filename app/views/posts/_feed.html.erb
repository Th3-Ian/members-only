
<div class="container mt-5 mb-5">
    <div class="row d-flex justify-content-center">
        <div class="col-md-8">
            <div class="d-flex flex-row"></div>
            <h1>Feed</h1>
            <% @posts.each do |post| %>
            <div class="row news-card p-3 bg-light border border-dark">
                <div class="col-md-8">
                    <div class="news-feed-text">
                        <h5><%= post.body %><br></h5>
                        <div class="d-flex flex-row justify-content-between align-items-center mt-2">
                            <div class="d-flex creator-profile"><img class="rounded-circle" src="https://static.thenounproject.com/png/302770-200.png" width="50" height="50">
                                <div class="d-flex flex-column ml-2">
                                    <h6 class="username">Username</h6><span class="date">Name</span>
                                </div>
                            </div>
                                <i class="fa fa-share share">
                                    <%= link_to 'Edit', edit_post_path(post) %>
                                    <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
                                </i>
                        </div>
                    </div>
                </div>
            </div>
            <br>
            <% end %>
        </div>
    </div>
</div>

